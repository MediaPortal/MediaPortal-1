<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
<id>2</id>
<defaultcontrol>2</defaultcontrol>
<allowoverlay>no</allowoverlay>
<define>#header.label:1</define>
<define>#useRandomPicturesUserFanart:Yes</define>
<define>#useSelectedFanart:Yes</define>
<controls>
    <import>common.default.background.xml</import>
    <import>common.pictures.random.fanart.xml</import>
    <import>common.pictures.selected.fanart.xml</import>
    <import>common.default.background.overlay.xml</import>

    <import>common.window.pictures.xml</import>
    
    <control>
        <id>0</id>
        <type>image</type>
        <posX>66</posX>
        <posY>36</posY>
        <width>60</width>
        <height>57</height>
        <texture>icon_pictures.png</texture>
        <visible>control.isvisible(50)</visible>
        <animation effect="fade" time="250">WindowOpen</animation>
        <animation effect="fade" time="250">WindowClose</animation>
    </control>

    <import>common.time.xml</import>
    
    <control>
        <description>Cover Art</description>
        <type>image</type>
        <id>500</id>
        <posX>121</posX>
        <posY>362</posY>
        <width>556</width>
        <height>556</height>
        <texture>#selectedthumb</texture>
        <keepaspectratio>yes</keepaspectratio>
        <align>center</align>
        <valign>top</valign>
        <visible>facadeview.list+Control.IsVisible(50)</visible>
        <animation effect="fade" time="250">WindowOpen</animation>
        <animation effect="fade" time="250">WindowClose</animation>
    </control>
    
    <!-- MP1-4986 -->

    <!-- Video -->

    <control>
        <description>Video banner</description>
        <id>0</id>
        <type>image</type>
        <posX>625</posX>
        <posY>362</posY>
        <width>50</width>
        <height>50</height>
        <texture>isVideo.png</texture>                                                  
        <visible>facadeview.list+Control.IsVisible(50)+string.equals(#pictures.IsVideo,true)</visible>
    	<animation effect="fade" time="0">WindowOpen</animation>
		<animation effect="fade" time="0">WindowClose</animation>
    </control>

    <!-- HDR -->

    <control>
        <description>HDR banner</description>
        <id>0</id>
        <type>image</type>
        <posX>625</posX>
        <posY>362</posY>
        <width>50</width>
        <height>50</height>
        <texture>isHDRPicture.png</texture>
        <visible>facadeview.list+Control.IsVisible(50)+string.equals(#pictures.IsHDR,true)</visible>
    	<animation effect="fade" time="0">WindowOpen</animation>
		<animation effect="fade" time="0">WindowClose</animation>
    </control>

    <!-- Rating -->

    <control>
      <description>Rating</description>
      <type>image</type>
      <id>0</id>
      <posX>625</posX>
      <posY>362</posY>
      <width>114</width>
      <height>114</height>
      <texture>RatingUser#(math.round(cflt(#pictures.Rating))).png</texture>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
      <animation effect="fade" time="0">Visible</animation>
      <animation effect="fade" time="0">WindowClose</animation>
    </control>

    <!-- Favorite -->

    <control>
      <description>Favorite</description>
      <type>image</type>
      <id>0</id>
      <posX>625</posX>
      <posY>362</posY>
      <width>114</width>
      <height>114</height>
      <texture>Favorite.png</texture>
      <visible>facadeview.list+Control.IsVisible(50)+string.equals(#pictures.Favorite,true)</visible>
      <animation effect="fade" time="0">Visible</animation>
      <animation effect="fade" time="0">WindowClose</animation>
    </control>

    <!-- Keywords -->

    <control>
        <description>Keywords</description>
        <type>fadelabel</type>
        <id>0</id>
        <posX>121</posX>
        <posY>940</posY>
        <width>556</width>
        <height>55</height>
        <label>#pictures.exif.keywords</label>
        <visible>facadeview.list+Control.IsVisible(50)</visible>
        <animation effect="fade" time="250">WindowOpen</animation>
        <animation effect="fade" time="250">WindowClose</animation>
    </control>

    <control>
        <id>1</id>
        <type>image</type>
        <posX>0</posX>
        <posY>440</posY>
        <width>64</width>
        <height>199</height>
        <texture>hiddenmenu_tab.png</texture>
        <visible>[facadeview.list | facadeview.smallicons | facadeview.largeicons]+Control.HasFocus(50) + !string.contains(#Titan.HiddenMenu, false)</visible>
        <animation effect="slide" start="-60,0" end="0,0" tween="quadratic" easing="in" time="250" delay="400">WindowOpen</animation>
        <animation effect="slide" start="0,0" end="-60,0" tween="quadratic" easing="in" time="250" delay="100">WindowClose</animation>
    </control>
        
    <control>
        <id>1</id>
        <type>image</type>
        <posX>858</posX>
        <posY>0</posY>
        <texture>hiddenmenu_tab_up.png</texture>
        <visible>[facadeview.filmstrip | facadeview.coverflow] + Control.HasFocus(50) + !string.contains(#Titan.HiddenMenu, false)</visible>
        <animation effect="slide" start="0,-60" end="0,0" tween="quadratic" easing="in" time="250" delay="400">WindowOpen</animation>
        <animation effect="slide" start="0,0" end="0,-60" tween="quadratic" easing="in" time="250" delay="100">WindowClose</animation>
    </control>
    
    <import>common.facade.pictures.xml</import>

    <!-- HDR -->

    <control>
      <description>HDR banner</description>
      <id>0</id>
      <type>image</type>
      <posX>381</posX>
      <posY>360</posY>
      <width>122</width>
      <height>122</height>
      <texture>isHDR.png</texture>                                                  
      <visible>[facadeview.list]+Control.IsVisible(50)+string.equals(#pictures.exif.ishdr,true)</visible>
      <animation effect="fade" time="0">WindowOpen</animation>
      <animation effect="fade" time="0">WindowClose</animation>
    </control>

    <control>
  	  <description>EXIF Logo</description>
      <type>image</type>
      <id>0</id>
   	  <posX>70</posX>
      <posY>360</posY>
      <width>30</width>
      <height>560</height>
      <align>center</align>
      <valign>top</valign>
      <keepaspectratio>yes</keepaspectratio>
      <shouldCache>true</shouldCache>
      <texture>#pictures.exif.images.vertical</texture>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
	  <animation effect="fade" time="250">WindowClose</animation>
    </control>

    <control>
  	  <description>EXIF Logo</description>
      <type>image</type>
      <id>0</id>
   	  <posX>20</posX>
      <posY>50</posY>
      <width>1900</width>
      <height>30</height>
      <align>center</align>
      <valign>middle</valign>
      <keepaspectratio>yes</keepaspectratio>
      <shouldCache>true</shouldCache>
      <texture>#pictures.exif.images.horizontal</texture>
      <visible>!facadeview.list+Control.IsVisible(50)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
	  <animation effect="fade" time="250">WindowClose</animation>
    </control>

    <import>mypics.hiddenmenu.xml</import>
    <import>mypics.folderchanged.xml</import>
    <import>common.overlay.xml</import>
</controls>
</window>