    <!-- CDArt -->
    <control>
      <id>0</id>
      <description>Empty CD Image</description>
      <type>image</type>
      <posX>1650</posX>
      <posY>810</posY>
      <width>250</width>
      <height>250</height>
      <texture>CD.png</texture>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <visible>![control.hasthumb(55555)|control.hasthumb(55055)]+Player.HasMedia</visible>
