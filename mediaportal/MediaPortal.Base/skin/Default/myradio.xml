<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!--version="1.0" encoding="utf-8" standalone="yes"-->
<window>
  <id>30</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>[facadeview.list|facadeview.filmstrip|facadeview.coverflow]</allowoverlay>
  <define>#header.label:666</define>
  <define>#header.hover:hover_my radio.png</define>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <texture>BH Radio.jpg</texture>
      <posX>-160</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
    </control>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>30</posY>
      <width>960</width>
      <height>720</height>
      <texture>general_overlay.png</texture>
    </control>
    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>2</defaultcontrol>
      <onexit>50</onexit>
      <buttonX>0</buttonX>
      <buttonY>-60</buttonY>
      <buttonwidth>79</buttonwidth>
      <buttonheight>720</buttonheight>
      <textureFocus>-</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>
      <width>426</width>
      <height>900</height>
      <dimColor>00ffffff</dimColor>
      <control>
        <type>image</type>
        <id>0</id>
        <width>960</width>
        <height>720</height>
        <texture>white.png</texture>
        <colordiffuse>201e90ff</colordiffuse>
      </control>
      <control>
        <type>image</type>
        <posX>19</posX>
        <posY>78</posY>
        <width>280</width>
        <height>591</height>
        <texture>Backslide.png</texture>
        <colorDiffuse>fffffffff</colorDiffuse>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
      </control>
      <control>
        <description>group element</description>
        <type>group</type>
        <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
        <posX>37</posX>
        <posY>121</posY>
        <layout>StackLayout</layout>
        <visible>!Control.HasFocus(50)</visible>
        <control>
          <description>View-As</description>
          <type>menubutton</type>
          <id>2</id>
          <label />
          <onright>50</onright>
          <onup>17</onup>
          <ondown>3</ondown>
          <mode>dialoglist</mode>
          <dialogTitle>792</dialogTitle>
          <valueTextInButton>yes</valueTextInButton>
          <valuePrefixText>95</valuePrefixText>
        </control>
        <control>
          <description>Sort</description>
          <type>sortbutton</type>
          <id>3</id>
          <onup>2</onup>
          <ondown>6</ondown>
          <onright>50</onright>
        </control>
        <control>
          <description>Previous</description>
          <type>button</type>
          <id>6</id>
          <label>210</label>
          <onright>50</onright>
          <onup>3</onup>
          <ondown>7</ondown>
          <action>15</action>
        </control>
        <control>
          <description>Next</description>
          <type>button</type>
          <id>7</id>
          <label>209</label>
          <onup>6</onup>
          <ondown>8</ondown>
          <onright>50</onright>
          <action>14</action>
        </control>
        <control>
          <description>Radio Guide</description>
          <type>button</type>
          <id>8</id>
          <label>533</label>
          <onright>50</onright>
          <onup>7</onup>
          <ondown>9</ondown>
          <hyperlink>762</hyperlink>
        </control>
        <control>
          <description>Recorded Radio</description>
          <type>button</type>
          <id>9</id>
          <label>914</label>
          <onright>50</onright>
          <onup>8</onup>
          <ondown>10</ondown>
          <hyperlink>763</hyperlink>
        </control>
        <control>
          <description>Radio Search</description>
          <type>button</type>
          <id>10</id>
          <label>137</label>
          <onright>50</onright>
          <onup>9</onup>
          <ondown>2</ondown>
          <hyperlink>8900</hyperlink>
        </control>
      </control>
    </control>
    <import>common.facade.music.xml</import>
    <control>
      <id>1</id>
      <type>image</type>
      <posX>742</posX>
      <posY>180</posY>
      <width>161</width>
      <height>161</height>
      <texture mask="cdthumbmask.png">missing_coverart_radio.png</texture>
      <visible>[facadeview.list|facadeview.album]+[Control.HasFocus(50)+!control.hasthumb(500)]</visible>
      <animation effect="fade" time="70" reversible="false">visible</animation>
    </control>
    <control>
      <id>500</id>
      <type>image</type>
      <posX>742</posX>
      <posY>180</posY>
      <width>161</width>
      <height>161</height>
      <texture mask="cdthumbmask.png">#selectedthumb</texture>
      <visible>[facadeview.list|facadeview.album]+[Control.HasFocus(50)]</visible>
      <animation effect="fade" time="70" reversible="false">visible</animation>
    </control>
    <control>
      <type>image</type>
      <id>1</id>
      <posX>742</posX>
      <posY>180</posY>
      <width>161</width>
      <height>161</height>
      <texture>cdthumbframe.png</texture>
      <visible>[facadeview.list|facadeview.album]+[Control.HasFocus(50)]</visible>
      <animation effect="fade" time="70" reversible="false">visible</animation>
    </control>
  </controls>
</window>
