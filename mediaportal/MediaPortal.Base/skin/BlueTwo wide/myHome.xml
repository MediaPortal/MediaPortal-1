<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>0</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <autohidetopbar>yes</autohidetopbar>
  <controls>
    <control>
      <description>background image</description>
      <type>image</type>
      <id>1</id>
      <width>1366</width>
      <height>768</height>
    </control>
    <control>
      <description>background image</description>
      <type>image</type>
      <id>1</id>
      <posX>45</posX>
      <posY>190</posY>
      <width>500</width>
      <height>466</height>
      <texture>background_glass_hoover_area.png</texture>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Menu</description>
      <type>menu</type>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="zoom" start="20,20" end="100,100" center="384,288" time="500">WindowOpen</animation>
      <animation effect="zoom" start="100,100" end="20,20" center="384,288" time="500">WindowClose</animation>
      <id>50</id>
      <posX>700</posX>
      <posY>180</posY>
      <width>488</width>
      <textcolor>ffffffff</textcolor>
      <textColorNoFocus>ffa9d0f7</textColorNoFocus>
      <dimColor>80ffffff</dimColor>
      <buttonTextXOff>77</buttonTextXOff>
      <buttonTextYOff>10</buttonTextYOff>
      <buttonOffset>25</buttonOffset>
      <buttonFont>font16</buttonFont>
      <buttonHeight>65</buttonHeight>
      <spaceBetweenButtons>18</spaceBetweenButtons>
      <numberOfButtons>5</numberOfButtons>
      <textureButtonFocus>hp_selectionbar.png</textureButtonFocus>
      <textureButtonNoFocus>-</textureButtonNoFocus>
      <hoverX>180</hoverX>
      <hoverY>285</hoverY>
      <hoverWidth>300</hoverWidth>
      <hoverHeight>350</hoverHeight>
      <hoverKeepAspectratio>yes</hoverKeepAspectratio>
      <scrollTime>120</scrollTime>
      <scrollTimeMin>60</scrollTimeMin>
      <textureBackground>background_glass_menu_area.png</textureBackground>
      <onright>13</onright>
      <onleft>10</onleft>
    </control>
    <!-- Date and Time -->
    <control>
      <description>Date</description>
      <type>label</type>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <id>200</id>
      <posX>630</posX>
      <posY>198</posY>
      <label>#date</label>
      <align>right</align>
      <font>font14</font>
      <textcolor>ffa9d0f7</textcolor>
    </control>
    <control>
      <description>Time</description>
      <type>label</type>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <id>201</id>
      <posX>630</posX>
      <posY>242</posY>
      <label>#time</label>
      <align>right</align>
      <font>font16</font>
      <textcolor>ffffffff</textcolor>
    </control>
    <!-- TOPBAR Buttons -->
    <control>
      <description>Back button</description>
      <type>button</type>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="zoom" start="100,100" end="110,110" center="838,81" time="150">focus</animation>
      <animation effect="zoom" start="110,110" end="100,100" center="838,81" time="300">unfocus</animation>
      <id>10</id>
      <posX>810</posX>
      <posY>60</posY>
      <width>56</width>
      <height>74</height>
      <textureFocus>button_shutdown_focus.png</textureFocus>
      <textureNoFocus>button_shutdown_nofocus.png</textureNoFocus>
      <label>-</label>
      <action>99</action>
      <onleft>50</onleft>
      <onright>11</onright>
      <onup>10</onup>
      <ondown>50</ondown>
    </control>
    <control>
      <description>videowallpaper button</description>
      <type>button</type>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="zoom" start="100,100" end="110,110" center="908,81" time="150">focus</animation>
      <animation effect="zoom" start="110,110" end="100,100" center="908,81" time="300">unfocus</animation>
      <id>11</id>
      <posX>880</posX>
      <posY>60</posY>
      <width>56</width>
      <height>81</height>
      <textureFocus>button_tvdesktop_focus.png</textureFocus>
      <textureNoFocus>button_tvdesktop_nofocus.png</textureNoFocus>
      <label>-</label>
      <action>101</action>
      <onleft>10</onleft>
      <onright>12</onright>
      <onup>11</onup>
      <ondown>50</ondown>
    </control>
    <control>
      <description>basichome button button</description>
      <type>button</type>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="zoom" start="100,100" end="110,110" center="978,81" time="150">focus</animation>
      <animation effect="zoom" start="110,110" end="100,100" center="978,81" time="300">unfocus</animation>
      <id>12</id>
      <posX>950</posX>
      <posY>60</posY>
      <width>56</width>
      <height>77</height>
      <textureFocus>Basic_focus.png</textureFocus>
      <textureNoFocus>Basic_nofocus.png</textureNoFocus>
      <label>-</label>
      <action>115</action>
      <onleft>11</onleft>
      <onright>13</onright>
      <onup>12</onup>
      <ondown>50</ondown>
    </control>
    <control>
      <description>Exit button</description>
      <type>button</type>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="zoom" start="100,100" end="110,110" center="1048,81" time="150">focus</animation>
      <animation effect="zoom" start="110,110" end="100,100" center="1048,81" time="300">unfocus</animation>
      <id>13</id>
      <posX>1020</posX>
      <posY>60</posY>
      <width>56</width>
      <height>77</height>
      <textureFocus>button_close_focus.png</textureFocus>
      <textureNoFocus>button_close_nofocus.png</textureNoFocus>
      <label>-</label>
      <action>97</action>
      <onleft>12</onleft>
      <onright>50</onright>
      <onup>13</onup>
      <ondown>50</ondown>
    </control>
  </controls>
</window>
