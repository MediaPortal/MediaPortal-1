<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>5000</id>
  <defaultcontrol>3</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:#currentmodule #scroll.wrap #selecteditem</define>
  <define>#header.hover:hover_my pictures.png</define>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <texture>BH Pictures.jpg</texture>
      <width>1920</width>
      <height>1080</height>
      <colordiffuse>90ffffff</colordiffuse>
    </control>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>45</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>general_overlay.png</texture>
    </control>
    
    
    <control>
      <id>2</id>
      <type>image</type>
      <posX>1410</posX>
      <posY>300</posY>
      <width>450</width>
      <height>550</height>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <texture>#pictures.exif.picture</texture>
      <visible>!control.hasthumb(555)</visible>
    </control>
    <control>
      <description>Map Art</description>
      <type>image</type>
      <id>555</id>
      <posX>1410</posX>
      <posY>300</posY>
      <width>450</width>
      <height>550</height>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <texture>#pictures.exif.additional</texture>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
    </control>
    <control>
      <description>listcontrol</description>
      <type>listcontrol</type>
      <id>3</id>
      <onleft>3</onleft>
      <onright>3</onright>
      <scrollOffset>5</scrollOffset>
      <posX>150</posX>
    <posY>255</posY>
    <width>1200</width>
    <height>720</height>
      <textXOff>10</textXOff>
      <itemWidth>40</itemWidth>
      <itemHeight>40</itemHeight>
      <IconXOff>5</IconXOff>
      <IconYOff>4</IconYOff>
      <dimColor>ffffffff</dimColor>
      <spinPosX>2828</spinPosX>
      <spinPosY>2000</spinPosY>
      <scrollbarXOff>5</scrollbarXOff>
    </control>
    <control>
      <description>EXIF Logo</description>
      <type>image</type>
      <id>0</id>
      <posX>70</posX>
      <posY>360</posY>
      <width>30</width>
      <height>560</height>
      <align>center</align>
      <valign>top</valign>
      <keepaspectratio>yes</keepaspectratio>
      <shouldCache>true</shouldCache>
      <texture>#pictures.exif.images.vertical</texture>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
  </controls>
</window>
