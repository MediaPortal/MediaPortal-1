<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>8465</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.hover:hover_MPsteam.png</define>
  <define>#header.label:Steam</define>
  <controls>
    <control>
      <description>background image</description>
      <type>image</type>
      <id>1</id>
      <width>1920</width>
      <height>1080</height>
      <texture>BH Steam.jpg</texture>
      <colordiffuse>ffffffff</colordiffuse>
    </control>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>45</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>general_overlay.png</texture>
    </control>
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>0</posX>
      <posY>142</posY>
      <width>1920</width>
      <label>Steam</label>
      <font>font14</font>
      <align>center</align>
      <textcolor>ffffd700</textcolor>
    </control>
    <!-- *** Buttons *** -->
    <control>
      <type>group</type>
      <description>group element</description>
      <animation effect="slide" time="100" start="-300,0" reversible="false">visible</animation>
      <animation effect="slide" time="100" end="-300,0" reversible="false">hidden</animation>
      <visible>!Control.HasFocus(50)</visible>
      <layout>StackLayout(0, Vertical, true)</layout>
      <posX>49</posX>
      <posY>250</posY>
      <control>
        <description>ButtonStartAgain</description>
        <type>button</type>
        <id>2</id>
        <label>Start Steam</label>
        <onleft>2</onleft>
        <onright>2</onright>
        <onup>2</onup>
        <ondown>3</ondown>
      </control>
      <control>
        <description>ButtonSetFocus</description>
        <type>button</type>
        <id>3</id>
        <label>Set Focus to Steam</label>
        <onleft>2</onleft>
        <onright>2</onright>
        <onup>2</onup>
        <ondown>2</ondown>
      </control>
    </control>
  </controls>
</window>
