        <width>1920</width>
        <height>1080</height>
        <texture>white.png</texture>
        <colordiffuse>50005eef</colordiffuse>
      </control>
      <control>
        <type>image</type>
        <posX>37</posX>
        <posY>117</posY>
        <width>559</width>
        <height>886</height>
