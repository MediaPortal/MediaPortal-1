      <posX>0</posX>
      <posY>45</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>general_overlay.png</texture>
    </control>
    <control>
      <description>Current View</description>
      <type>label</type>
      <id>0</id>
      <posX>45</posX>
      <posY>15</posY>
      <width>1299</width>
      <font>Label</font>
