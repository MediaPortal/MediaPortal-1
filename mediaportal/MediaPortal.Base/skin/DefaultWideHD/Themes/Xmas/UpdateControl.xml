<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>7984</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#header.label:Windows Update Control</define>
  <define>#header.hover:hover_updatecontrol.png</define>
  <define>#itemcount:</define>
  <controls>
    <control>
      <description>BackGround</description>
      <type>image</type>
      <id>1</id>
      <width>1920</width>
      <height>1080</height>
      <texture>blue.png</texture>
      
      <colordiffuse>ffffffff</colordiffuse>
    </control>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>45</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>general_overlay.png</texture>
    </control>
    <control>
      <description>Header</description>
      <type>fadelabel</type>
      <posX>45</posX>
      <posY>15</posY>
      <width>525</width>
      <font>Label</font>
      <align>left</align>
      <textcolor>ffffd700</textcolor>
      <label>Windows Update Control</label>
    </control>
    <control>
      <description>background image</description>
      <type>image</type>
      <id>1</id>
      <posX>1</posX>
      <posY>169</posY>
      <width>480</width>
      <height>540</height>
      <texture>Backslide.png</texture>
      <colordiffuse>eeffffff</colordiffuse>
    </control>
    <!-- *** Buttons *** -->
    <control>
      <description>Buttons</description>
      <type>group</type>
      <posX>50</posX>
      <posY>230</posY>
      <layout>StackLayout</layout>
      <control>
        <description>Show Updates</description>
        <type>button</type>
        <id>2</id>
        <label>Show installed updates</label>
        <onup>7</onup>
        <ondown>3</ondown>
      </control>
      <control>
        <description>Search Update</description>
        <type>button</type>
        <id>3</id>
        <label>Search for avilable updates</label>
        <onup>2</onup>
        <ondown>8</ondown>
      </control>
      <control>
        <description>Filter Update</description>
        <type>checkbutton</type>
        <id>8</id>
        <label>Filter update(s)</label>
        <onup>3</onup>
        <ondown>4</ondown>
      </control>
      <control>
        <description>Install Update</description>
        <type>button</type>
        <id>4</id>
        <label>Install update(s)</label>
        <onup>8</onup>
        <ondown>5</ondown>
      </control>
      <control>
        <description>Restore Points</description>
        <type>checkbutton</type>
        <id>5</id>
        <label>Restore Points</label>
        <onup>4</onup>
        <ondown>6</ondown>
      </control>
      <control>
        <description>Reboot</description>
        <type>button</type>
        <id>6</id>
        <label>Reboot</label>
        <onup>5</onup>
        <ondown>7</ondown>
      </control>
      <control>
        <description>Clean</description>
        <type>button</type>
        <id>7</id>
        <label>Clean distribution folder</label>
        <onup>6</onup>
        <ondown>2</ondown>
      </control>
    </control>
    <!-- *** Action *** -->
    <control>
      <description>Action</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>372</posX>
      <posY>95</posY>
      <width>702</width>
      <align>left</align>
      <font>font12</font>
      <label>#UpdateControl.Action</label>
      <textcolor>ffffd700</textcolor>
      <visible>!skin.hassetting(#skin.noclock)</visible>
    </control>
    <control>
      <description>Action</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>80</posX>
      <posY>95</posY>
      <width>702</width>
      <align>left</align>
      <font>font12</font>
      <label>#UpdateControl.Action</label>
      <textcolor>ffffd700</textcolor>
      <visible>skin.hassetting(#skin.noclock)</visible>
    </control>
    <!-- *** Update list *** -->
    <control Style="NoShadow">
      <description>listcontrol</description>
      <type>listcontrol</type>
      <id>50</id>
      <posX>506</posX>
      <posY>250</posY>
      <width>850</width>
      <height>710</height>
      <textXOff>28</textXOff>
      <itemWidth>0</itemWidth>
      <itemHeight>0</itemHeight>
      <scrollbarHeight>400</scrollbarHeight>
      <scrollbarbg>bar_vert.png</scrollbarbg>
      <scrollbartop>mouse_left_horizontal.png</scrollbartop>
      <scrollbarbottom>mouse_right_horizontal.png</scrollbarbottom>
      <scrollbarXOff>15</scrollbarXOff>
      <scrollbarYOff>0</scrollbarYOff>
      <showScrollbar>yes</showScrollbar>
      <scrollbarwidth>20</scrollbarwidth>
      <spinPosX>3935</spinPosX>
      <spinPosY>801</spinPosY>
      <onleft>2</onleft>
    </control>
    <control>
      <description>Action</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>1450</posX>
      <posY>250</posY>
      <width>430</width>
      <height>630</height>
      <align>left</align>
      <font>font11</font>
      <label>#UpdateControl.UpdateDate  (#UpdateControl.UpdateSeverity  ~ #UpdateControl.UpdateSize)  #UpdateControl.UpdateDescription</label>
      <textcolor>ffffd700</textcolor>
    </control>
  </controls>
</window>
