      <posX>60</posX>
      <posY>270</posY>
      <layout>StackLayout</layout>
      <control>
        <description>Mailbox</description>
        <type>button</type>
        <id>2</id>
        <label>Mailbox...</label>
        <onup>9</onup>
        <ondown>3</ondown>
        <onleft>50</onleft>
        <onright>50</onright>
      </control>
      <control>
        <description>Delete/Trash</description>
        <type>button</type>
        <id>3</id>
        <label>Delete/Trash messages</label>
        <onup>2</onup>
        <ondown>4</ondown>
        <onleft>50</onleft>
        <onright>50</onright>
      </control>
      <control>
        <description>Delete/Trash All</description>
        <type>button</type>
        <id>4</id>
        <label>Delete/Trash all messages</label>
        <onup>3</onup>
        <ondown>5</ondown>
        <onleft>50</onleft>
        <onright>50</onright>
      </control>
      <control>
        <description>Save attachments</description>
        <type>button</type>
        <id>5</id>
        <label>Save attachments</label>
        <onup>4</onup>
        <ondown>9</ondown>
        <onleft>50</onleft>
        <onright>50</onright>
      </control>
      <control>
        <description>Synchronize</description>
        <type>button</type>
        <id>9</id>
        <label>Synchronize</label>
        <onup>5</onup>
        <ondown>2</ondown>
        <onleft>50</onleft>
        <onright>50</onright>
      </control>
    </control>
    <!-- *** Action *** -->
    <control>
      <description>Action</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>45</posX>
      <posY>52</posY>
      <width>1509</width>
      <align>left</align>
      <font>font10</font>
      <shadowAngle>45</shadowAngle>
      <shadowDistance>3</shadowDistance>
      <shadowColor>ff202020</shadowColor>
      <textcolor>ffffd700</textcolor>
      <colordiffuse>ffffffff</colordiffuse>
      <label>#MailTip.TranslationAction</label>
      <visible>![control.isvisible(12)|control.isvisible(13)]+string.equals(#MailTip.MailSender, )</visible>
    </control>
    <!-- *** Progress *** -->
    <control>
      <description>Progress Text</description>
      <type>label</type>
      <id>12</id>
      <posX>45</posX>
      <posY>52</posY>
      <width>1509</width>
      <align>left</align>
      <font>font10</font>
      <shadowAngle>45</shadowAngle>
      <shadowDistance>3</shadowDistance>
      <shadowColor>ff202020</shadowColor>
      <textcolor>ffffd700</textcolor>
      <colordiffuse>ffffffff</colordiffuse>
      <label>#MailTip.TranslationAction #MailTip.ReceiveProgress...</label>
      <visible>string.equals(#MailTip.Action,Receive)+string.equals(#MailTip.MailSender, )</visible>
    </control>
    <!-- *** List *** -->
    <control>
      <description>listcontrol</description>
      <type>listcontrol</type>
      <id>50</id>
      <posX>505</posX>
      <posY>270</posY>
      <width>1264</width>
      <height>709</height>
      <PinIconXOff>6</PinIconXOff>
      <PinIconYOff>1</PinIconYOff>
      <PinIconWidth>32</PinIconWidth>
      <PinIconHeight>32</PinIconHeight>
      <onleft>2</onleft>
      <visible>string.equals(#MailTip.Action,Idle)</visible>
    </control>
