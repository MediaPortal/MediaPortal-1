<window>
  <id>79810</id>
  <defaultcontrol>0</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <controls>
    <!-- *** Dialog background *** -->
    <control>
        <type>image</type>
        <id>1</id>
        <width>1920</width>
        <height>1080</height>
        <texture>white.png</texture>
        <colordiffuse>50005eef</colordiffuse>
      </control>
    <control>
      <description>Dialog Headline Background</description>
      <type>image</type>
      <id>0</id>
      <posX>270</posX>
      <posY>120</posY>
      <width>1380</width>
      <height>940</height>
      <texture>listbg2.png</texture>
    </control>
    <!-- *** Location Title *** -->
    <control>
      <description>Location Title</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>0</posX>
      <posY>180</posY>
      <width>1920</width>
      <label>#WorldPlaces.LocationItemTitle</label>
      <align>center</align>
      <visible>!string.equals(#WorldPlaces.LocationItemTitle, )</visible>
      <font>font12</font>
    </control>
    <!-- *** Location Image *** -->
    <control>
      <description>Location Image</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>220</posY>
      <width>1920</width>
      <height>800</height>
      <keepaspectratio>yes</keepaspectratio>
      <texture>#WorldPlaces.LocationItemCurrentImage</texture>
      <centered>yes</centered>
      <visible>!string.equals(#WorldPlaces.LocationItemCurrentImage,)</visible>
    </control>
  </controls>
</window>
