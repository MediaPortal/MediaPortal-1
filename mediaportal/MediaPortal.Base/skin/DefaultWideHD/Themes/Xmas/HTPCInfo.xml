<window>
  <id>7972</id>
  <defaultcontrol>6</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:HTPC Info    #HTPCInfo.SectionName</define>
  <define>#header.hover:hover_htpcinfo.png</define>
  <define>#itemcount:</define>
  <controls>
    <control>
      <description>background image</description>
      <type>image</type>
      <id>1</id>
      <width>1920</width>
      <height>1080</height>
      <texture>htpcinfo.jpg</texture>
      <colordiffuse>80ffffff</colordiffuse>
    </control>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>15</posY>
      <width>1920</width>
      <height>1170</height>
      <texture>general_overlay.png</texture>
    </control>
    <control>
      <type>label</type>
      <id>1</id>
      <posX>45</posX>
      <posY>15</posY>
      <label>HTPC Info    #HTPCInfo.SectionName</label>
      <font>Label</font>
      <align>left</align>
      <textcolor>ffffd700</textcolor>
    </control>
    <!-- *** WARNING Message *** -->
    <control>
      <id>1</id>
      <description>Warning Message</description>
      <type>label</type>
      <posX>0</posX>
      <posY>142</posY>
      <label>GPU: #HTPCInfo.SensorTemperatureGPU | CPU Package: #HTPCInfo.SensorTemperatureCPUPackage | PC: #HTPCInfo.SensorTemperatureSystem | HDD: #HTPCInfo.SensorTemperatureHD0</label>
      <width>1920</width>
      <align>center</align>
      <font>font14</font>
      <textcolor>ffffd700</textcolor>
    </control>
    <!-- *** Button *** -->
    <control>
      <type>group</type>
      <description>group element</description>
      <posX>60</posX>
      <posY>255</posY>
      <layout>StackLayout(0, Vertical, true)</layout>
      <control>
        <description>Section</description>
        <type>button</type>
        <id>6</id>
        <onup>17</onup>
        <ondown>9999</ondown>
      </control>
      <control>
        <description>hidden button for info menu</description>
        <type>button</type>
        <id>9999</id>
        <label>#HTPCInfo.TranslationNetwork / #HTPCInfo.TranslationTVDevice</label>
        <onup>6</onup>
        <ondown>99</ondown>
        <visible>string.equals(#HTPCInfo.SectionView,Overview)</visible>
      </control>
      <control>
        <description>hidden button for info menu</description>
        <type>button</type>
        <id>99</id>
        <label>#HTPCInfo.TranslationMachine / #HTPCInfo.TranslationOS</label>
        <onup>9999</onup>
        <ondown>2</ondown>
        <visible>string.equals(#HTPCInfo.SectionView,Overview)</visible>
      </control>
      <control>
        <description>Flush Memory</description>
        <type>button</type>
        <id>2</id>
        <label>Flush Memory</label>
        <onup>99</onup>
        <ondown>8</ondown>
      </control>
      <control>
        <description>Flush Caches</description>
        <type>button</type>
        <id>8</id>
        <label>Flush Memory</label>
        <onup>2</onup>
        <ondown>3</ondown>
      </control>
      <control>
        <description>Empty Recycle Bin</description>
        <type>button</type>
        <id>3</id>
        <label>Empty Recycle Bin</label>
        <onup>8</onup>
        <ondown>4</ondown>
      </control>
      <control>
        <description>Kill Not Responding Processes</description>
        <type>button</type>
        <id>4</id>
        <label>Kill Not Responding Processes</label>
        <onup>3</onup>
        <ondown>5</ondown>
      </control>
      <control>
        <description>Synchronize Time</description>
        <type>button</type>
        <id>5</id>
        <label>Synchronize Time</label>
        <onup>4</onup>
        <ondown>7</ondown>
      </control>
      <control>
        <description>Wake On LAN</description>
        <type>button</type>
        <id>7</id>
        <label>Wake On LAN</label>
        <onup>5</onup>
        <ondown>9</ondown>
      </control>
      <control>
        <description>Safely Remove USB</description>
        <type>button</type>
        <id>9</id>
        <label>Safely Remove</label>
        <onup>7</onup>
        <ondown>10</ondown>
      </control>
      <control>
        <description>Create Restore Point</description>
        <type>button</type>
        <id>10</id>
        <label>Create Restore Point</label>
        <onup>9</onup>
        <ondown>6</ondown>
      </control>
    </control>
    <!-- *** Sections *** -->
    <control>
      <description>Section Overview</description>
      <type>label</type>
      <id>50</id>
      <posX>-54</posX>
      <posY>100</posY>
      <label>#HTPCInfo.SectionName</label>
      <font>font12</font>
      <visible>string.equals(#HTPCInfo.SectionView,Overview)</visible>
    </control>
    <control>
      <description>Section Details</description>
      <type>label</type>
      <id>51</id>
      <posX>-54</posX>
      <posY>100</posY>
      <label>#HTPCInfo.SectionName</label>
      <font>font12</font>
      <visible>string.equals(#HTPCInfo.SectionView,Details)</visible>
    </control>
    <control>
      <description>Section Gauges</description>
      <type>label</type>
      <id>52</id>
      <posX>-54</posX>
      <posY>100</posY>
      <label>#HTPCInfo.SectionName</label>
      <font>font12</font>
      <visible>string.equals(#HTPCInfo.SectionView,Gauges)</visible>
    </control>
    <control>
      <description>Section Progressbars</description>
      <type>label</type>
      <id>53</id>
      <posX>-54</posX>
      <posY>100</posY>
      <label>#HTPCInfo.SectionName</label>
      <font>font12</font>
      <visible>string.equals(#HTPCInfo.SectionView,Summary)</visible>
    </control>
    <control>
      <description>Section Self Designed</description>
      <type>label</type>
      <id>54</id>
      <posX>-54</posX>
      <posY>100</posY>
      <label>#HTPCInfo.SectionName</label>
      <font>font12</font>
      <visible>Control.IsVisible(54)</visible>
    </control>
    <!-- *** Section Import *** -->
    <import>HTPCInfoOverview.xml</import>
    <import>HTPCInfoDetails.xml</import>
    <import>HTPCInfoGauges.xml</import>
  </controls>
</window>
