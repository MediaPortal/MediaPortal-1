    <control>
      <type>label</type>
      <id>1</id>
      <posX>45</posX>
      <posY>15</posY>
      <label>#currentmodule</label>
      <font>Label</font>
      <align>left</align>
      <textcolor>ffffd700</textcolor>
    </control>
    <control>
      <description>Number of Files Label</description>
      <type>label</type>
      <id>1</id>
      <posX>45</posX>
      <posY>52</posY>
      <label>#selectedindex/#itemcount</label>
      <align>left</align>
      <textcolor>ffffd700</textcolor>
      <font>font10</font>
      <visible>string.equals(#selectedindex)+string.equals(#itemcount)</visible>
    </control>
    <control>
      <description>background selecteditem</description>
      <type>image</type>
      <id>0</id>
      <posX>-20</posX>
      <posY>97</posY>
      <width>2025</width>
      <height>90</height>
      <texture>general_overlay_selecteditem.png</texture>
      <colordiffuse>bbffffff</colordiffuse>
    </control>
    <control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>45</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>general_overlay.png</texture>
    </control>
    <import>common.time.xml</import>
    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>2</defaultcontrol>
      <onexit>50</onexit>
      <buttonX>0</buttonX>
      <buttonY>-130</buttonY>
      <buttonwidth>159</buttonwidth>
      <buttonheight>1080</buttonheight>
      <textureFocus>-</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>
      <width>852</width>
      <height>1350</height>
      <dimColor>00ffffff</dimColor>
      <control>
        <type>image</type>
        <id>0</id>
        <width>1920</width>
        <height>1080</height>
        <texture>white.png</texture>
        <colordiffuse>50005eef</colordiffuse>
      </control>
      <control>
        <type>image</type>
        <posX>39</posX>
        <posY>117</posY>
        <width>570</width>
        <height>886</height>
        <texture>Backslide.png</texture>
        <colorDiffuse>ffffffff</colorDiffuse>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
      </control>
      <control>
        <description>group element</description>
        <type>group</type>
        <visible>!Control.HasFocus(50)</visible>
        <posX>75</posX>
        <posY>181</posY>
        <layout>StackLayout(0, Vertical, true)</layout>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
        <control>
          <description>Switch Layout</description>
          <type>button</type>
          <id>2</id>
          <onleft>50</onleft>
          <onright>50</onright>
        </control>
        <control>
          <description>Refresh</description>
          <type>button</type>
          <id>3</id>
          <label>184</label>
          <onleft>50</onleft>
          <onright>50</onright>
        </control>
      </control>
    </control>
    <import>common.facade.video.Title.xml</import>
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>0</posX>
      <posY>142</posY>
      <width>1920</width>
      <label>#selecteditem</label>
      <font>font14</font>
      <align>center</align>
      <textcolor>ffffd700</textcolor>
    </control>
    <control>
      <description>Series Default image</description>
      <id>0</id>
      <type>image</type>
      <posX>1230</posX>
      <posY>270</posY>
      <width>456</width>
      <height>634</height>
      <texture mask="videothumbmask.png">missing_Coverart_video.png</texture>
      <visible>facadeview.list+!control.hasthumb(500)</visible>
    </control>
    <control>
      <description>Series Poster</description>
      <id>500</id>
      <type>image</type>
      <posX>1230</posX>
      <posY>270</posY>
      <width>456</width>
      <height>634</height>
      <texture mask="videothumbmask.png">#selectedthumb</texture>
      <visible>facadeview.list</visible>
    </control>
    <control>
      <description>Series Poster Frame</description>
      <type>image</type>
      <id>1</id>
      <posX>1230</posX>
      <posY>270</posY>
      <width>456</width>
      <height>634</height>
      <texture>Videothumbframe.png</texture>
      <visible>facadeview.list</visible>
    </control>
