<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>7974</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#header.label:Bing Image - #BingImage.ImageRegion (#BingImage.ImageDate)</define>
  <define>#header.hover:hover_bing_image.png</define>
  <controls>
    <control>
      <description>Default Background</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>blue.png</texture>
      <colordiffuse>ffffffff</colordiffuse>
    </control>
    <control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>45</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>general_overlay.png</texture>
    </control>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <!-- *** Buttons *** -->
    
      <control>
        <type>group</type>
        <description>group element</description>
        <animation effect="slide" time="100" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="100" end="-300,0" reversible="false">hidden</animation>
        <visible>!Control.HasFocus(50)</visible>
        <layout>StackLayout(0, Vertical, true)</layout>
        <posX>49</posX>
        <posY>237</posY>
        <control>
          <description>Region</description>
          <type>button</type>
          <id>2</id>
          <label>Region...</label>
          <onup>17</onup>
          <ondown>3</ondown>
        </control>
        <control>
          <description>Archive images</description>
          <type>checkbutton</type>
          <id>3</id>
          <label>Archive images</label>
          <onup>2</onup>
          <ondown>4</ondown>
        </control>
        <control>
          <description>Open libary</description>
          <type>button</type>
          <id>4</id>
          <label>Open library...</label>
          <onup>3</onup>
          <ondown>9</ondown>
        </control>
        <control>
          <description>Refresh</description>
          <type>button</type>
          <id>9</id>
          <label>Refresh</label>
          <onup>4</onup>
          <ondown>2</ondown>
        </control>
      </control>
    
    <!-- *** Bing Image *** -->
    <control>
      <description>Bing image</description>
      <type>image</type>
      <id>0</id>
      <posX>520</posX>
      <posY>230</posY>
      <width>1300</width>
      <height>700</height>
      <keepaspectratio>yes</keepaspectratio>
      <texture mask="picturecase_mask.png">#BingImage.Image</texture>
    </control>
    <!-- *** Bing Image information *** -->
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>520</posX>
      <posY>130</posY>
      <width>1350</width>
      <label>#BingImage.ImageDescription</label>
      <font>Label</font>
      <align>center</align>
      <textcolor>ffffd700</textcolor>
      <visible>!string.equals(#BingImage.ImageDate, )</visible>
    </control>
    <control>
      <description>Header</description>
      <type>fadelabel</type>
      <posX>45</posX>
      <posY>15</posY>
      <width>525</width>
      <font>Label</font>
      <align>left</align>
      <textcolor>ffffd700</textcolor>
      <label>Bing Image</label>
    </control>
  </controls>
</window>
