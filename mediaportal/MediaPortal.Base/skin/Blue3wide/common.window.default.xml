<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <width>1280</width>
      <height>720</height>
    </control>
    <control>
      <type>label</type>
      <id>1</id>
      <posX>106</posX>
      <posY>25</posY>
      <font>font48</font>
      <textcolor>33ffffff</textcolor>
      <label>#header.text</label>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Page text label</description>
      <type>label</type>
      <id>1</id>
      <label>#header.label</label>
      <posX>444</posX>
      <posY>87</posY>
      <font>font16</font>
      <align>right</align>
      <textcolor>White</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>1191</posX>
      <posY>87</posY>
      <width>711</width>
      <label>#selecteditem</label>
      <font>font14</font>
      <textcolor>White</textcolor>
      <align>right</align>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <type>image</type>
      <id>1</id>
      <posX>133</posX>
      <posY>462</posY>
      <texture>#header.hover</texture>
      <visible>facadeview.list+Control.HasFocus(50)</visible>
      <animation effect="slide" time="250" end="-300,0">hidden</animation>
      <animation effect="slide" time="250" start="-300,0">visible</animation>
    </control>
    <control>
      <description>Number of Files Label</description>
      <type>label</type>
      <id>1</id>
      <posX>462</posX>
      <posY>662</posY>
      <label>#itemcount</label>
      <align>left</align>
      <textcolor>ffffffff</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Date</description>
      <type>label</type>
      <id>1</id>
      <posX>1084</posX>
      <posY>37</posY>
      <label>#date</label>
      <align>right</align>
      <font>font14</font>
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Time</description>
      <type>label</type>
      <id>1</id>
      <posX>1208</posX>
      <posY>37</posY>
      <label>#time</label>
      <align>right</align>
      <font>font14</font>
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
  </controls>
</window>