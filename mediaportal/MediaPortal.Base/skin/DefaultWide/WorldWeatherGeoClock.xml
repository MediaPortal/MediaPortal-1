<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!--version="1.0" encoding="utf-8" standalone="yes"-->
<window>
  <allowoverlay>yes</allowoverlay>
  <controls>
    <!-- *** GeoClock *** -->
    <control>
      <description>Location label</description>
      <type>label</type>
      <id>0</id>
      <posX>30</posX>
    <posY>10</posY>
      <width>600</width>
      <label>#(L(8))  #(L(19100))</label>
      <font>font14</font>
      <align>left</align>
      <textcolor>ivory</textcolor>
      <visible>string.equals(#WorldWeather.View,GeoClock)</visible>
    </control>
    <control>
      <description>GeoClock image</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>80</posY>
      <width>1280</width>
      <height>640</height>
      <texture>#WorldWeather.ImageGeoClock</texture>
      <visible>string.equals(#WorldWeather.View,GeoClock)</visible>
    </control>
    <!-- *** Timzone description *** -->
		<control>
			<description>timezone description label</description>
			<type>label</type>
			<id>0</id>
			<posX>0</posX>
			<posY>698</posY>
			<width>1280</width>
			<align>center</align>
			<label>#WorldWeather.LocationTimezoneDescription</label>
			<font>font11</font>
			<textcolor>black</textcolor>
			<visible>string.equals(#WorldWeather.View,GeoClock)+!string.equals(#WorldWeather.ImageGeoClock, )</visible>
		</control>
  </controls>
</window>
