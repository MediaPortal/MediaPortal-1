<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>603</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <texture>background.png</texture>
      <width>1280</width>
      <height>720</height>
    </control>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>30</posY>
      <width>1280</width>
      <height>720</height>
      <texture>general_overlay.png</texture>
    </control>
    <control>
      <id>500</id>
      <type>image</type>
      <posX>990</posX>
      <posY>180</posY>
      <width>245</width>
      <height>138</height>
      <texture mask="Picturethumbmask.png">#selectedthumb</texture>
      <visible>[facadeview.list|facadeview.album]</visible>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>990</posX>
      <posY>180</posY>
      <width>245</width>
      <height>138</height>
      <texture>Picturethumbframe.png</texture>
      <visible>[facadeview.list|facadeview.album]+Control.HasThumb(500)</visible>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>990</posX>
      <posY>180</posY>
      <texture>-</texture>
    </control>
    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>2</defaultcontrol>
      <onexit>0</onexit>
      <buttonX>0</buttonX>
      <buttonY>-60</buttonY>
      <buttonwidth>106</buttonwidth>
      <buttonheight>720</buttonheight>
      <textureFocus>-</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>
      <width>275</width>
      <height>720</height>
      <dimColor>00ffffff</dimColor>
      <control>
        <type>image</type>
        <id>0</id>
        <width>1280</width>
        <height>720</height>
        <texture>white.png</texture>
        <colordiffuse>201e90ff</colordiffuse>
      </control>
      <control>
        <type>image</type>
        <posX>26</posX>
        <posY>78</posY>
        <width>320</width>
        <height>591</height>
        <texture>Backslide.png</texture>
        <colorDiffuse>fffffffff</colorDiffuse>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
      </control>
      <control>
        <description>group element</description>
        <type>group</type>
        <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
        <layout>StackLayout(0, Vertical, true)</layout>
        <posX>50</posX>
        <posY>121</posY>
        <visible>!Control.HasFocus(50)</visible>
        <control>
          <type>menubutton</type>
          <description>View-As button</description>
          <id>2</id>
          <onleft>2</onleft>
          <onright>50</onright>
          <onup>17</onup>
          <ondown>3</ondown>
          <label></label>
          <mode>dialoglist</mode>
          <dialogTitle>792</dialogTitle>
          <valueTextInButton>yes</valueTextInButton>
          <valuePrefixText>95</valuePrefixText>
        </control>
        <control>
          <type>sortbutton</type>
          <id>3</id>
          <onleft>3</onleft>
          <onright>50</onright>
          <onup>2</onup>
          <ondown>5</ondown>
          <label>620</label>
        </control>
        <control>
          <type>menubutton</type>
          <description>All,Genre,Channel button</description>
          <id>5</id>
          <onleft>5</onleft>
          <onright>50</onright>
          <onup>3</onup>
          <ondown>6</ondown>
          <label></label>
          <mode>dialoglist</mode>
          <dialogTitle>499</dialogTitle>
          <valueTextInButton>yes</valueTextInButton>
          <valuePrefixText>97</valuePrefixText>
        </control>
        <control>
          <type>button</type>
          <description>cleanup button</description>
          <id>6</id>
          <onleft>6</onleft>
          <onright>50</onright>
          <onup>5</onup>
          <ondown>99</ondown>
          <label>624</label>
        </control>
      </control>
    </control>
    <control>
      <description>Seperator</description>
      <type>image</type>
      <id>1</id>
      <posX>80</posX>
      <posY>425</posY>
      <width>1140</width>
      <height>1</height>
      <texture>hbar1white.png</texture>
      <colordiffuse>60ffffff</colordiffuse>
    </control>
    <control>
      <type>image</type>
      <posX>80</posX>
      <posY>440</posY>
      <width>60</width>
      <height>60</height>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <zoom>no</zoom>
      <texture>#TV.RecordedTV.thumb</texture>
    </control>
    <control>
      <description>channel</description>
      <id>0</id>
      <type>fadelabel</type>
      <posX>160</posX>
      <posY>440</posY>
      <width>1060</width>
      <textcolor>ff6FAFE1</textcolor>
      <label>#TV.RecordedTV.Channel  |  #TV.RecordedTV.Time  |  #TV.RecordedTV.Genre</label>
      <font>font12</font>
    </control>
    <control>
      <description>Program Title</description>
      <id>14</id>
      <type>fadelabel</type>
      <posX>160</posX>
      <posY>465</posY>
      <width>1060</width>
      <label>#TV.RecordedTV.Title</label>
      <align>left</align>
      <font>font14</font>
      <textcolor>ivory</textcolor>
    </control>
    <control>
      <description>Current program Genre</description>
      <type>fadelabel</type>
      <id>13</id>
      <posX>2552</posX>
      <posY>566</posY>
      <width>680</width>
      <label>#TV.RecordedTV.Genre</label>
      <font>font10</font>
      <textcolor>ff6FAFE1</textcolor>
      <visible>!string.equals(#TV.RecordedTV.Genre,-)</visible>
    </control>
    <control>
      <description>Description1</description>
      <type>textboxscrollup</type>
      <id>15</id>
      <posX>160</posX>
      <posY>505</posY>
      <width>1060</width>
      <height>105</height>
      <label>#TV.RecordedTV.Description</label>
      <font>font11</font>
      <textcolor>FFFFFFFF</textcolor>
    </control>
    <import>common.facade.recordings.xml</import>
  </controls>
</window>
