        <type>label</type>
        <id>201</id>
        <posX>92</posX>
        <posY>512</posY>
        <label>19005</label>
      </control>
      <control>
        <description>Score</description>
        <type>label</type>
        <id>202</id>
        <posX>380</posX>
        <posY>512</posY>
