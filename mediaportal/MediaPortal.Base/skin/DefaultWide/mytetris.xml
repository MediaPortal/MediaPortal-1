      <description>group element</description>
      <type>group</type>
      
      
      <animation effect="slide" time="70" start="-300,0">WindowOpen</animation>
      <animation effect="slide" time="70" end="800,0">WindowClose</animation>
      <control>
        <description>Tetris control</description>
        <type>tetris</type>
        <id>10</id>
        <posX>515</posX>
        <posY>121</posY>
        <width>702</width>
        <height>562</height>
        <font>font16</font>
        <textcolor>ffffffff</textcolor>
        <onback>2</onback>
        <onleft>2</onleft>
        <onright>10</onright>
        <onup>10</onup>
        <ondown>10</ondown>
        <colordiffuse>60ffffff</colordiffuse>
        <texture>tetris\background.png</texture>
        <texturefocus>tetris\background_focus.png</texturefocus>
        <textureLeft>tetris\guide.png</textureLeft>
        <textureRight>tetris\guide.png</textureRight>
