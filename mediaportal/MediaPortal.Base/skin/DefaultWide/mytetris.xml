      </control>
      <control>
        <description>Level</description>
        <type>label</type>
        <id>204</id>
        <posX>380</posX>
        <posY>555</posY>
        <width>288</width>
        <align>right</align>
        <label>#tetris_level</label>
      </control>
      <control>
        <description>Lines: label</description>
        <type>label</type>
        <id>205</id>
        <posX>92</posX>
        <posY>597</posY>
        <label>19007</label>
      </control>
      <control>
        <description>Lines</description>
        <type>label</type>
        <id>206</id>
        <posX>380</posX>
        <posY>597</posY>
        <width>288</width>
        <align>right</align>
        <label>#tetris_lines</label>
      </control>
      <control>
        <description>Highscore: label</description>
        <type>label</type>
        <id>205</id>
        <posX>92</posX>
        <posY>640</posY>
        <label>19008</label>
      </control>
      <control>
        <description>Highscore</description>
        <type>label</type>
