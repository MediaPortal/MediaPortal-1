<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>7776</id>
  <defaultcontrol>10</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <texture>background.png</texture>
      <width>1280</width>
      <height>720</height>
    </control>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>button group</description>
      <type>group</type>
      <!-- animations in this screen are equal for all objects, because nextblock-image got it's animation by tetris control, but it's possition is in scoreboard -->
      
      
      <animation effect="slide" time="70" start="-300,0">WindowOpen</animation>
      <animation effect="slide" time="70" end="800,0">WindowClose</animation>
      <posX>50</posX>
      <posY>121</posY>
      <layout>StackLayout</layout>
      <control>
        <description>New Game</description>
        <type>button</type>
        <id>2</id>
        <label>19002</label>
        <onright>10</onright>
        <onup>17</onup>
      </control>
      <control>
        <description>Sounds</description>
        <type>togglebutton</type>
        <id>4</id>
        <label>19004</label>
        <onright>10</onright>
      </control>
    </control>
    <control>
