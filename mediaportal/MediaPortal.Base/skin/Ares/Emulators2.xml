<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<!-- myEmulators skin for StreamdMP fanart oriented by hulkhaugen -->

<window>

  <id>7942</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>no</allowoverlay>

  <!-- Shadows under blue/grey text -->
  <define>#shadow.dark:ff111111</define>
  <!-- Shadows under white text -->
  <define>#shadow.light:ff222222</define>

  <controls>
    <import>Emulators2.dummy.xml</import>

    <!--::::::::::::::::::::::::
    :: FANART AND BACKGROUNDS ::
    :::::::::::::::::::::::::-->

    <control>
      <description>Default Background</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>#backgroundcolour</texture>
    </control>
	

    <control>
      <description>FanArt Background</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>#Emulators2.CurrentItem.fanartpath</texture>
	  <colordiffuse>12ffffff</colordiffuse>
      <animation effect="fade" start="0" end="100" time="200">Visible</animation>
      <animation effect="fade" start="100" end="0" time="200" delay="200">Hidden</animation>
      <visible>control.isvisible(1230)</visible>
    </control>

    <control>
      <description>FanArt Background 2</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>#Emulators2.CurrentItem.fanartpath2</texture>
	  <colordiffuse>12ffffff</colordiffuse>
      <animation effect="fade" start="0" end="100" time="200">Visible</animation>
      <animation effect="fade" start="100" end="0" time="200" delay="200">Hidden</animation>
      <visible>control.isvisible(1231)</visible>
    </control>
	
	<control>
      <description>background</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>#overlaycolour</texture>
    </control>		
	
	<import>custom\Allscreens\user_dialog.xml</import>
		
	<control>
      <description>Cover Art</description>
      <type>image</type>
      <id>0</id>
      <posX>40</posX>
      <posY>190</posY>
      <width>1845</width>
      <height>624</height>
      <texture>D_over1.png</texture>
    </control>	
	
  	  <control>
        <description>Cover Art</description>
        <type>image</type>
        <id>0</id>
        <posX>40</posX>
        <posY>821</posY>
        <width>1845</width>
        <height>209</height>
        <texture>Inf_gfx.png</texture>
      </control>	
	  
	  
    <import>Emulators2.facade.xml</import>
    <import>Emulators2.listview.xml</import>
    <import>Emulators2.detailsview.xml</import>

	
		<control>
		  <description>Date / Time</description>
		  <type>label</type>
		  <id>0</id>
          <posX>#Xposition</posX>
		  <posY>#Yposition</posY>
          <height>43</height>
          <width>500</width>
          <font>fontBold2</font>
		  <label>#Emulators2.currentfilter</label>
		  <align>right</align>
		  <textcolor>ffffffff</textcolor>
		  <visible>!control.isvisible(2211)</visible>
		</control>	
    
    <!--::::::::::::::
    :: SIDE BUTTONS :: (Not visible)
    ::::::::::::::::::-->


    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>10</defaultcontrol>
      <onexit>50</onexit>
		  <buttonX>0</buttonX>
		  <buttonY>0</buttonY>
		  <buttonwidth>100</buttonwidth>
          <buttonheight>1080</buttonheight>
          <textureFocus>-</textureFocus>
          <textureNoFocus>-</textureNoFocus>
		  <width>800</width>
		  <height>800</height>
		  <dimColor>00ffffff</dimColor>

	 <control>
	   <type>image</type>
	   <posX>0</posX>
	   <posY>0</posY>
	   <width>1920</width>
	   <height>1080</height>
       <texture>black.png</texture>
        <colordiffuse>99000000</colordiffuse>
	   <animation effect="fade" time="350" reversible="true">hidden</animation>
	   <visible>!Control.HasFocus(50)+control.isvisible(50)</visible>    
	 </control>
		
	  <control>
        <type>image</type>
        <id>0</id>
        <posX>420</posX>
        <posY>150</posY>
        <width>975</width>
        <height>836</height>
        <texture>dialogglowbig.png</texture>
		<visible>!Control.HasFocus(50)+control.isvisible(50)</visible>    
      </control>	
	  
      <control>
        <description>group element</description>
        <type>group</type>
        <visible>!Control.HasFocus(50)+control.isvisible(50)</visible>
        <control>
          <description>button group</description>
          <type>group</type>
          <posX>500</posX>
          <posY>250</posY>
          <layout>StackLayout</layout>
          <visible>!Control.HasFocus(50)+control.isvisible(50)</visible>
          <control>
            <description>View-As button</description>
            <type>button</type>
            <id>10</id>
            <label>#Emulators2.Label.currentlayout</label>
            <onright>50</onright>
            <onup>13</onup>
            <ondown>12</ondown>
			<textureFocus>btn_list_blue2.png</textureFocus>
            <textureNoFocus></textureNoFocus>
			<textYOff>7</textYOff>
			<width>820</width>
			<height>50</height>
          </control>
          <control>
            <description>Views button</description>
            <type>button</type>
            <id>12</id>
            <label>#Emulators2.Label.switchview</label>
            <onright>50</onright>
            <onup>10</onup>
            <ondown>11</ondown>
			<textureFocus>btn_list_blue2.png</textureFocus>
            <textureNoFocus></textureNoFocus>
			<textYOff>7</textYOff>
			<width>820</width>
			<height>50</height>			
          </control>
          <control>
            <description>Sort button</description>
            <type>sortbutton</type>
            <id>11</id>
            <label>#Emulators2.sortlabel</label>
            <onright>50</onright>
            <onup>12</onup>
            <ondown>13</ondown>
			<textureFocus>btn_list_blue2.png</textureFocus>
            <textureNoFocus></textureNoFocus>
			<textYOff>7</textYOff>
			<width>820</width>
			<height>50</height>			
          </control>
          <control>
            <description>Import button</description>
            <type>button</type>
            <id>13</id>
            <label>#Emulators2.Label.runimport</label>
            <onright>50</onright>
            <onup>11</onup>
            <ondown>10</ondown>
			<textureFocus>btn_list_blue2.png</textureFocus>
            <textureNoFocus></textureNoFocus>
			<textYOff>7</textYOff>
			<width>820</width>
			<height>50</height>			
          </control>
        </control>
      </control>
    </control>

    <control>
      <description>Working Animation</description>
      <type>animation</type>
      <id>0</id>
      <posX>628</posX>
      <posY>15</posY>
      <width>24</width>
      <height>24</height>
      <textures>common.waiting.1.png;common.waiting.2.png;common.waiting.3.png;common.waiting.4.png;common.waiting.5.png;common.waiting.6.png;common.waiting.7.png;common.waiting.8.png</textures>
      <Duration>0:0:01.5</Duration>
      <visible>string.contains(#Emulators2.Importer.working,yes)</visible>
      <keepaspectratio>yes</keepaspectratio>
    </control>
  </controls>
</window>